# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/													controllers.CategoryController.list()
# GET		/test												controllers.Application.test(name: List[String])

# Product
GET     /prod												controllers.ProductController.all()
GET     /prod/												controllers.ProductController.all()
GET		/prod/all											controllers.ProductController.all()
GET     /prod/all/                                          controllers.ProductController.all()
GET		/prod/:product										controllers.ProductController.show(product: String, lc: String ?= "")

# Category
GET		/shop												controllers.CategoryController.list()
GET		/shop/												controllers.CategoryController.list()
GET		/shop/all											controllers.CategoryController.list()
GET		/shop/all/											controllers.CategoryController.list()
GET		/shop/*categories									controllers.CategoryController.select(categories)

# Map static resources from the /public folder to the /assets URL path
GET		/assets/*file										controllers.Assets.at(path="/public", file)
